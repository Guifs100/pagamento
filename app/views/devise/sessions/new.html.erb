<%= render partial: 'shared/navbar' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<body class="login-page sidebar-collapse">

<div class="page-header clear-filter" filter-color="orange">
  <div class="page-header-image"></div>
  <div class="content">
    <div class="container">
      <div class="col-md-4 ml-auto mr-auto">
        <div class="card card-login card-plain">
          <form class="form" method="" action="">
            <div class="card-header text-center">
              <div class="logo-container">
                <img src="../assets/img/now-logo.png" alt="">
              </div>
            </div>
            <div class="card-body">
              <div class="input-group no-border input-lg">
                  <% f.label :email %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
              </div>
              <div class="input-group no-border input-lg">
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
              </div>
              <div class="align-content-lg-center">
                <h6>
                  <%= render "devise/shared/links" %>
                </h6>
              </div>
            </div>
            <div class="card-footer text-center">
              <%= f.submit "Log in", class: 'btn btn-primary btn-round btn-lg btn-block' %>
              <div class="align-content-lg-center">
                <h6>
                  <% if devise_mapping.rememberable? %>
                      <%= f.check_box :remember_me, class: 'form-check-label' %>
                      <%= f.label :remember_me %>
                  <% end %>
                </h6>
              </div>
            </div></form>
        </div>
      </div>
    </div>
  </div>
  <footer class="footer">
    <div class=" container ">
      <nav>
        <ul>
          <li>
            <a href="https://www.creative-tim.com">
              Creative Tim
