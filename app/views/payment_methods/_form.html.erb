<% if @payment_method.errors.full_messages.any? %>
  <ul>
    <% @payment_method.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @payment_method, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name, class: "form-control col-3" %>
  </div>
  
  <div class="form-group">
    <%= f.label :tax, 'Taxa'%>
    <%= f.number_field :tax, class: "form-control col-3" %>
  </div>
  
  <%= f.submit 'Salvar', class: "btn btn-primary"%>
<% end %>